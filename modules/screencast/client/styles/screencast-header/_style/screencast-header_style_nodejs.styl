.screencast-header

  &_style_nodejs
    background #020806 url("screencast-header_style_nodejs.jpg") 50% 50% no-repeat
    background-size cover

  &_style_nodejs &__title-accent
    color #DFC374

  &_style_nodejs &__info,
  &_style_nodejs & .share-icons__title
    color rgba(255,255,255,0.7)

  &_style_nodejs .share-icons .share
    color #DFC374

  &_style_nodejs .share-icons .share:hover
    color hoverize(#DFC374)

  &_style_nodejs &__foot
    color #B1D490

  &_style_nodejs &__tag
    position absolute
    top 27px
    right -60px

    margin 0
    padding 10px 60px

    color #1E2937 !important
    background #B1D490
    text-decoration none !important

    transform rotate(45deg)

  &_style_nodejs:after
    background url("data:image/svg+xml;base64,")
