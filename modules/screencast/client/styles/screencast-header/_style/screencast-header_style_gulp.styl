.screencast-header

  &_style_gulp
    background #020806 url("screencast-header_style_gulp.jpg") 50% 50% no-repeat
    background-size cover

  &_style_gulp &__title
    margin-top -40px
    text-shadow: 0px 2px 4px rgba(0,0,0,0.50);

  &_style_gulp &__description
    text-shadow: 0px 2px 4px rgba(0,0,0,0.50);

  &_style_gulp &__title-accent
    width 167px
    height 107px
    background url(gulp.svg)
    display inline-block
    position relative
    top 30px
    left 16px

  &_style_gulp &__info
    opacity 0.6
    color white
    text-shadow 0px 2px 2px #000000

  &_style_gulp .share-icons .share,
  &_style_gulp .donate-links__link
    color #8DD792

  &_style_gulp .share-icons__title,
  &_style_gulp .donate-links__title
    color white

  &_style_gulp .share-icons .share:hover,
  &_style_gulp .donate-links__link:hover
    color hoverize(#8DD792)

  &_style_gulp &__button .simple-button__text
    color #8DD792

  &_style_gulp &__button .simple-button__description
    color white

  &_style_gulp &__foot
    color white
    text-shadow 0px 2px 2px rgba(0,0,0,0.50)

  &_style_gulp &__tag
    position absolute
    top 27px
    right -60px

    margin 0
    padding 10px 60px

    color #1E2937 !important
    background #B1D490
    text-decoration none !important

    transform rotate(45deg)

  &_style_gulp:after
    background url("data:image/svg+xml;base64,")
